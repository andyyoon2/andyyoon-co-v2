---
import Footer from "../components/Footer.astro";
import GlobalStyles from "../components/GlobalStyles.astro";
import Header from "../components/Header.astro";
import BgPattern from "../components/BgPattern.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>My Blog in Astro</title>
  </head>
  <body
    class="bg-slate-200 dark:bg-zinc-900 text-zinc-900 dark:text-zinc-100 px-4 md:px-0"
  >
    <main
      class="flex flex-col justify-between align-stretch min-h-screen max-w-2xl mx-auto"
    >
      <GlobalStyles />
      {/* <BgPattern /> */}
      <!-- <Header /> -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
